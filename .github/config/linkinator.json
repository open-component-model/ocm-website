{
  "concurrency": 10,
  "recurse": true,
  "verbosity": "warning",
  "timeout": 0,
  "retry": true,
  "retryErrors": true,
  "retryErrorsCount": 5,
  "retryErrorsJitter": 2000,

  "skip": [
    "^https?://(www\\.)?gitea\\.ocm\\.dev(/|$)",
    "^https://.*\\.ocm\\.dev(/|$)",
    "^https://github\\.com/.*",
    "^https://kubernetes\\.slack\\.com/.*",
    "^https://join\\.slack\\.com/.*",
    "^https://www\\.linuxfoundation\\.org/.*",
    "^https?://[^/]+/\\.netlify/.*"
  ],

  "statusCodes": {
    "403": "warn",
    "429": "warn",
    "5xx": "warn"
  }
}
