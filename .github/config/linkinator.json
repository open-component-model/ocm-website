{
  "concurrency": 50,
  "recurse": true,
  "verbosity": "error",
  "timeout": 15000,
  "retry": true,
  "retryErrors": true,
  "retryErrorsCount": 2,
  "retryErrorsJitter": 500,

  "skip": [
    "^https?://(www\\.)?gitea\\.ocm\\.dev(/|$)",
    "^https://.*\\.ocm\\.dev(/|$)",
    "^https://github\\.com/.*",
    "^https://kubernetes\\.slack\\.com/.*",
    "^https://join\\.slack\\.com/.*",
    "^https://www\\.linuxfoundation\\.org/.*",
    "^https?://[^/]+/\\.netlify/.*"
  ],

  "statusCodes": {
    "403": "warn",
    "429": "warn",
    "5xx": "warn"
  }
}
